{
  "name": "node-server",
  "version": "1.0.0",
  "repository": "git@github.com:ghivert/node-server.git",
  "author": "Guillaume Hivert <guillaume.hivert@outlook.com>",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "dev": "SERVER_ENV=development nodemon src/index.js"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "nodemon": "^1.18.5"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true,
      "amd": true,
      "node": true
    },
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "log",
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}
